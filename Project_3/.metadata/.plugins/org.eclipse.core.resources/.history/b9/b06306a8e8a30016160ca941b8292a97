#ifndef INCLUDES_MESSAGEINT_H_
#define INCLUDES_MESSAGEINT_H_
#define MAX_DATA_SIZE 0x05
#include <stdint.h>
typedef struct CI_Msg{
	cmds_t command;
	uint8_t length;
	uint8_t data[MAX_DATA_SIZE];
	uint16_t checksum;
} CI_Msg_t;

CI_Msg_t *pkt;

typedef enum cmd{
	LED_COLOR = 0x0A,
	LED_BRIGHT = 0x0B,
};

typedef enum ledcolor{
	RED_LED = 0x01,
	GREEN_LED = 0x02,
	BLUE_LED = 0x03,
}color_t;

typedef enum ledbright{
	LOW = 0x11,
	MEDIUM = 0x12,
	HIGH = 0x13,
}brightness_t;
#endif
