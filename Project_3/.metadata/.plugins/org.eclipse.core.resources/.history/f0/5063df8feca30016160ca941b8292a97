#include "MKL25Z4.h"
#include <stdint.h>
#include "rxtestled.h"
#include "messageint.h"

inptr = (uint8_t*)calloc(4,sizeof(uint8_t));


/*void UART0_input(uint8_t i)
{
  uint8_t c;
  c = UART0->D;
  *(inptr+i) = c;
}*/
void message_in()
{
uint8_t i,c = 0;

while(i<4)
{
	c = UART0->D;
	*(inptr+i) = c;
  i++;
}
pkt->command = *(inptr);
pkt->length = *(inptr+1);
pkt->data = *(inptr+2);
pkt->checksum = *(inptr+3);
}

